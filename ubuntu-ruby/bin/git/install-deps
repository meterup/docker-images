#!/usr/bin/env bash

set -euo pipefail

main() {
    # gettext: needed by git to generate error messages
    # curl, ca-certificates: download tarball
    # unzip: unzips tarball
    # make: build
    # autoconf, gcc: compile git
    # libcurl4-openssl-dev: "https" helper for git
    apt-get update && apt-get install -y --no-install-recommends \
        curl ca-certificates unzip make autoconf gcc zlib1g-dev gettext \
        libcurl4-openssl-dev libssl-dev
}

main "$@"
